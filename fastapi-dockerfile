FROM python:3.11-slim

# 设置时区
ENV TZ=Asia/Shanghai
ENV PYTHONUNBUFFERED=1

# 设置工作目录
WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# 复制 requirements 文件
COPY ./ruoyi-fastapi-backend/requirements.txt .
COPY ./ruoyi-fastapi-backend/requirements-pg.txt .

# 安装 Python 依赖
RUN pip install --no-cache-dir -r requirements-pg.txt

# 复制应用代码
COPY ./ruoyi-fastapi-backend/ .

# 复制 Docker 环境配置文件
COPY ./ruoyi-fastapi-backend/.env.docker .env

# 创建必要的目录
RUN mkdir -p /app/logs /app/uploads

# 设置权限
RUN chown -R 1000:1000 /app

# 切换到非 root 用户
USER 1000:1000

# 暴露端口
EXPOSE 9099

# 健康检查
HEALTHCHECK --interval=30s --timeout=30s --start-period=10s --retries=3 \
  CMD curl -f http://localhost:9099/docs || exit 1

# 启动命令
CMD ["python", "app.py", "--env=prod"]